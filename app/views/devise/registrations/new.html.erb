<div class="col-sm-3 col-sm-offset-4">
<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  
  <%= f.input :email, :autofocus => true, :require => true, :input_html => {:class => "input"} %>
  <%= f.input :password, :require => true, :input_html => {:class => "input"} %>
  <%= f.input :password_confirmation, :require => true, :input_html => {:class => "input"} %>
  
  <div class="form-actions">
    <%= f.submit "Sign up", :class => "btn btn-mini btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>