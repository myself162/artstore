<div class="col-sm-3 col-sm-offset-4">
  <h2>Sign in</h2>

  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

    <%= f.input :email, :autofocus => true , :input_html => {:class => "input"}%>
    <%= f.input :password, :input_html => {:class => "input"}%>


    <% if devise_mapping.rememberable? -%>
      <div><%= f.check_box :remember_me, :input_html => {:class => "input"} %> <%= f.label :remember_me %></div>
    <% end -%>

    <div><%= f.submit "Sign in", :class => "btn btn-mini btn-primary" %></div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>